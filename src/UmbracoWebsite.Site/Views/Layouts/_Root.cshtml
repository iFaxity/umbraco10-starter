@inherits AdvaniaViewPage
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="@(Model.GetCultureInfo()?.TwoLetterISOLanguageName)" class="overflow-x-hidden">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="~/dist/style.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    @RenderSection("BeforeBody", required: false)
</head>
<body class="antialiased relative font-sans bg-background text-front text-base overflow-x-hidden">
@await Html.PartialAsync("_SkipNav")
    <div class="min-h-screen flex flex-col">
        @RenderBody()
    </div>

    <script src="~/dist/main.js" type="text/javascript" asp-append-version="true"></script>
    @RenderSection("AfterBody", required: false)
</body>
</html>
